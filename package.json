{
  "name": "bloomon-challenge",
  "version": "0.0.1",
  "description": "Bloomon code challenge",
  "main": "dist/index.js",
  "scripts": {
    "lint": "tslint -p .",
    "prestart": "tsc -p .",
    "start": "node ./dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bloomon/code-challenge.git"
  },
  "author": "Bloomon",
  "license": "UNLICENSED",
  "homepage": "http://www.bloomon.nl",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^23.1.3",
    "@types/node": "^10.5.1",
    "eslint": "^4.19.1",
    "jest": "^23.2.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "automock": false,
    "setupFiles": [],
    "transformIgnorePatterns": [
      "/node_modules/",
      "/app/",
      "<rootDir>/dist/"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testPathIgnorePatterns": [
      "/coverage/",
      "/dist/",
      "/node_modules/",
      "/app/",
      "index.ts"
    ],
    "testRegex": "(/__tests__/.*\\.spec\\.(ts|tsx)|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "functions": 0,
        "lines": 0
      }
    }
  }
}
